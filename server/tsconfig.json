{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    
    "rootDir": ".",          // ← база – папка server
    "outDir": "./dist",      // ← усе лягає в server/dist
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  
  "include": [
    "src",
    
    "shared/**/*.ts"   // ← використовується junction усередині server/
  ]
}